    protected override async Task OnInitializedAsync()
    {
        await LoadData();
        StartAutoRefreshTimer();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            jsModule = await JSRuntime.InvokeAsync<IJSObjectReference>("import", "./Components/Pages/Metrics.razor.js");
        }
    }

    private void StartAutoRefreshTimer()
    {
        // Dispose existing timer to prevent multiple timers running
        refreshTimer?.Dispose();
        
        secondsUntilRefresh = RefreshIntervalSeconds;
        // Refresh data every second
        refreshTimer = new System.Threading.Timer(_ =>
        {
            if (autoRefreshEnabled)
            {
                // Use fire-and-forget pattern with proper error handling
                _ = InvokeAsync(async () =>
                {
                    try
                    {
                        await LoadData();
                    }
                    catch
                    {
                        // Ignore errors in background refresh
                    }
                });
            }
        }, null, TimeSpan.FromSeconds(RefreshIntervalSeconds), TimeSpan.FromSeconds(RefreshIntervalSeconds));
    }

    private async Task SelectTimeRange(int minutes)
    {
        selectedMinutes = minutes;
        
        // Enable auto-refresh for 1 hour or less, disable for 3 hours or more
        if (selectedMinutes <= 60)
        {
            autoRefreshEnabled = true;
        }
        else if (selectedMinutes >= 180)
        {
            autoRefreshEnabled = false;
        }
        
        await LoadData();
    }

    private async Task RefreshData()
    {
        await LoadData();
    }

    private async Task UpdateChartsAsync()
    {
        try
        {
            // Use UpdateSeriesAsync for smoother updates
            if (combinedCpuChart != null)
                await combinedCpuChart.UpdateSeriesAsync();
            
            if (memoryChart != null)
                await memoryChart.UpdateSeriesAsync();
        }
        catch
        {
            // Ignore chart update errors (e.g., if component not yet rendered)
        }
    }
    
    public async ValueTask DisposeAsync()
    {
        refreshTimer?.Dispose();
        loadDataSemaphore?.Dispose();
        
        if (jsModule != null)
        {
            await jsModule.DisposeAsync();
        }
    }

    private async Task LoadData()
    {
        // Skip if another load is in progress (non-blocking check)
        if (!await loadDataSemaphore.WaitAsync(0))
        {
            return; // Another load is in progress, skip this one
        }

        try
        {
            // Only show loading spinner on initial load, not on auto-refresh
            var isInitialLoad = !snapshots.Any();
            
            if (isInitialLoad)
            {
                isLoading = true;
                StateHasChanged();
            }
            
            hasError = false;
            errorMessage = string.Empty;
            
            var endTime = DateTime.Now;
            var startTime = endTime.AddMinutes(-selectedMinutes);

            snapshots = await MetricsService.GetSnapshotsAsync(startTime, endTime);
            temperatures = await MetricsService.GetCpuTemperaturesAsync(startTime, endTime);
            processSnapshots = await MetricsService.GetProcessSnapshotsAsync(startTime, endTime);

            // Create a hashset of snapshot IDs that have temperature data for faster lookup
            var snapshotsWithTemp = new HashSet<long>(temperatures.Select(t => t.SnapshotId));

            // Convert temperature data for charting
            tempReadings = temperatures.Select(t => new TempReading
            {
                Timestamp = snapshots.FirstOrDefault(s => s.SnapshotId == t.SnapshotId)?.SnapshotTimestamp ?? DateTime.Now,
                CpuTctlTdie = t.CpuTctlTdie,
                CpuDieAverage = t.CpuDieAverage,
                CpuCcd1Tdie = t.CpuCcd1Tdie,
                CpuCcd2Tdie = t.CpuCcd2Tdie
            }).ToList();

            // Combine CPU usage and thermal limit data
            cpuMetrics = snapshots.Select(s => new CpuMetric
            {
                Timestamp = s.SnapshotTimestamp,
                CpuUsage = s.TotalCpuUsage,
                ThermalLimitPercent = temperatures.FirstOrDefault(t => t.SnapshotId == s.SnapshotId)?.ThermalLimitPercent
            }).ToList();

            // Create combined CPU usage and temperature metrics
            // Only include snapshots that have corresponding temperature data to avoid showing zeros
            cpuTempMetrics = snapshots
                .Where(s => snapshotsWithTemp.Contains(s.SnapshotId))
                .Select(s =>
                {
                    var temp = temperatures.First(t => t.SnapshotId == s.SnapshotId);
                    return new CpuTempMetric
                    {
                        Timestamp = s.SnapshotTimestamp,
                        CpuUsage = s.TotalCpuUsage,
                        ThermalLimitPercent = temp.ThermalLimitPercent,
                        CpuTctlTdie = temp.CpuTctlTdie,
                        CpuDieAverage = temp.CpuDieAverage
                    };
                }).ToList();
        }
        catch (Exception ex)
        {
            hasError = true;
            errorMessage = ex.Message;
        }
        finally
        {
            if (isLoading)
            {
                isLoading = false;
            }
            
            // Update charts after data loads
            await UpdateChartsAsync();
            
            // Update process snapshot data in JavaScript for tooltip
            await UpdateProcessSnapshotDataInJs();
            
            // Ensure UI updates
            StateHasChanged();
            
            loadDataSemaphore.Release();
        }
    }

    private async Task UpdateProcessSnapshotDataInJs()
    {
        if (jsModule == null || !snapshots.Any())
            return;

        try
        {
            // Create a dictionary mapping data point index to tooltip data (processes + available memory)
            var tooltipData = new Dictionary<int, object>();
            
            for (int i = 0; i < snapshots.Count; i++)
            {
                var snapshot = snapshots[i];
                var topProcesses = new List<object>();
                
                if (processSnapshots.TryGetValue(snapshot.SnapshotId, out var processes))
                {
                    // Get top 5 processes by private memory
                    topProcesses = processes
                        .Where(p => p.PrivateMemoryMb.HasValue)
                        .OrderByDescending(p => p.PrivateMemoryMb)
                        .Take(5)
                        .Select(p => new
                        {
                            processName = p.ProcessName,
                            privateMemoryMb = p.PrivateMemoryMb,
                            processCount = p.ProcessCount
                        })
                        .ToList<object>();
                }
                
                tooltipData[i] = new
                {
                    processes = topProcesses,
                    availableMemoryMb = snapshot.TotalAvailableMemoryMb
                };
            }
            
            await jsModule.InvokeVoidAsync("updateProcessSnapshotData", tooltipData);
        }
        catch
        {
            // Don't propagate this error - it's not critical for chart functionality
        }
    }

    private class TempReading
    {
        public DateTime Timestamp { get; set; }
        public decimal? CpuTctlTdie { get; set; }
        public decimal? CpuDieAverage { get; set; }
        public decimal? CpuCcd1Tdie { get; set; }
        public decimal? CpuCcd2Tdie { get; set; }
    }

    private class CpuMetric
    {
        public DateTime Timestamp { get; set; }
        public decimal? CpuUsage { get; set; }
        public decimal? ThermalLimitPercent { get; set; }
    }

    private class CpuTempMetric
    {
        public DateTime Timestamp { get; set; }
        public decimal? CpuUsage { get; set; }
        public decimal? ThermalLimitPercent { get; set; }
        public decimal? CpuTctlTdie { get; set; }
        public decimal? CpuDieAverage { get; set; }
    }
}
