    private string errorMessage = string.Empty;
    private System.Threading.Timer? refreshTimer;
    private int secondsUntilRefresh = 1;
    private const int RefreshIntervalSeconds = 1;
    private bool autoRefreshEnabled = true;
    private IJSObjectReference? jsModule;
    private SemaphoreSlim loadDataSemaphore = new SemaphoreSlim(1, 1);
    
    private ApexChart<CpuTempMetric>? combinedCpuChart;
    private ApexChart<Snapshot>? memoryChart;

